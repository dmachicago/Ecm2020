<Window x:Class="popupReviewSearchParms" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="835" Height="453" Title="popupReviewSearchParms" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" Name="popupReviewSearchParms">
  <Grid x:Name="LayoutRoot" Margin="2">
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,8,10,4" Grid.Row="1" />
    <DataGrid Height="357" Margin="12,12,356,0" Name="dgParms" VerticalAlignment="Top" />
    <Button Content="Copy" Grid.Row="1" Height="29" HorizontalAlignment="Left" Margin="120,2,0,0" Name="btnCopy" VerticalAlignment="Top" Width="155" Click="btnCopy_Click" />
    <!--<c1:C1RichTextBox Height="356" HorizontalAlignment="Right" Margin="0,13,23,0"  VerticalAlignment="Top" Width="317" />-->
    <RichTextBox x:Name="txtParms" Height="357" HorizontalAlignment="Right" Margin="0,13,23,0" VerticalAlignment="Top" Width="317">
      <FlowDocument>
        <Paragraph>
          <Run Text="RichTextBox" />
        </Paragraph>
      </FlowDocument>
    </RichTextBox>
  </Grid>
</Window>